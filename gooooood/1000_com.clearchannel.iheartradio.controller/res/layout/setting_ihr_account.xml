<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:id="@id/top_label" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Sign Up for Added Features" />
            <TableLayout android:id="@id/TableLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TableRow>
                    <TextView android:id="@id/tvFeatureDot1" android:layout_height="wrap_content" android:layout_column="1" android:text="  •" />
                    <TextView android:id="@id/features_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text=" Single account access to all 750+ station" android:singleLine="false" />
                </TableRow>
                <TableRow>
                    <TextView android:id="@id/features_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text=" websites" android:singleLine="false" />
                </TableRow>
                <TableRow>
                    <TextView android:id="@id/tvFeatureDot2" android:layout_height="wrap_content" android:layout_column="1" android:text="  •" />
                    <TextView android:id="@id/features_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text=" Create a list of your favorite stations" android:singleLine="false" />
                </TableRow>
                <TableRow>
                    <TextView android:id="@id/features_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text=" and songs" android:singleLine="false" />
                </TableRow>
            </TableLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <Button android:layout_gravity="center_horizontal" android:id="@id/sign_up_now" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Sign Up Now" />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Already got an account? Log In" />
            <Button android:layout_gravity="center_horizontal" android:id="@id/log_In_with_iheartradion_account" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Log In with iheartradion account" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>