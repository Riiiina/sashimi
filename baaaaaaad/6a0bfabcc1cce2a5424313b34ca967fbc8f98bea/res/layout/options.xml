<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="10.0pt" android:layout_gravity="center" android:id="@id/option_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="选项" />
    <ScrollView android:id="@id/options_scroll" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="0.5">
        <TableLayout android:id="@id/options_table" android:background="#ff222222" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </ScrollView>
    <TableLayout android:id="@id/button_table" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="5.0pt" android:layout_weight="1.0">
        <TableRow android:id="@id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <Button android:id="@id/save_options" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保存选项" android:layout_weight="1.0" />
            <Button android:id="@id/go_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/go_back" android:layout_weight="1.0" />
        </TableRow>
    </TableLayout>
</LinearLayout>